<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6cece"
    tools:context="com.magicbank.akashsengar.magicbank.ChooseCountry">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF058B"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout4"
        android:layout_alignEnd="@+id/relativeLayout4"
        android:id="@+id/view2" />
    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#FF058B"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/view"
        android:layout_alignBottom="@+id/relativeLayout5" />
    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#e6cece"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/relativeLayout5"
        android:layout_alignEnd="@+id/relativeLayout5"
        android:layout_alignParentBottom="true">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/spinner"
        android:padding="10dp"
        style="@style/spinner_style"
        android:popupBackground="#cccccc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/main_custom_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button_selector"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept Terms and Conditions"
            android:id="@+id/checkBox"
            android:layout_below="@+id/spinner"
            android:layout_alignLeft="@+id/spinner"
            android:layout_alignStart="@+id/spinner" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#99FFCC"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/view"
        android:layout_toLeftOf="@+id/view">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Long Click Button View Available"
        android:id="@+id/textView12"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#66000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#CCCCFF"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/view"
        android:layout_toRightOf="@+id/view"
        android:id="@+id/relativeLayout5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Local Magic Bank Saving Account "
        android:id="@+id/textView13"
        android:gravity="center"
        android:textColor="#66000000"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#CCFFFF"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Backup/Restore in Local Storage"
            android:id="@+id/textView15"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#66000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#CCFF99"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/view"
        android:id="@+id/relativeLayout4"
        android:layout_toRightOf="@+id/view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Stick Notes while expenditure"
            android:id="@+id/textView14"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#66000000"/>
</RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF058B"
        android:layout_centerHorizontal="true"
        android:id="@+id/view1"
        android:layout_below="@+id/view" />


</RelativeLayout>
