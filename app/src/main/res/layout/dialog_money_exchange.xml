<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="#fff">

    <EditText
        android:id="@+id/userInputDialog"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter amount"
        android:inputType="number"
        android:paddingLeft="2dp"
        android:gravity="center"
        android:backgroundTint="@color/DarkKhaki"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/userInputDialog_1"
        android:layout_alignStart="@+id/userInputDialog_1" />

    <EditText
        android:id="@+id/userInputDialog_1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Choose name"
        android:inputType="text"
        android:focusable="false"
        android:clickable="true"
        android:paddingLeft="2dp"
        android:gravity="center"
        android:backgroundTint="@color/DarkKhaki"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button_money"
        android:textColor="#fff"
        android:drawableTop="@drawable/check"
        android:drawablePadding="-12dp"
        android:background="@color/DarkKhaki"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</LinearLayout>